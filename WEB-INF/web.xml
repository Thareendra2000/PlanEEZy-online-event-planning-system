<?xml version="1.0" encoding="UTF-8"?>
	
	<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
       
       <display-name>Online event planning system</display-name>
		  <welcome-file-list>
		    <welcome-file>home1.jsp</welcome-file>
		    </welcome-file-list>
        <!-- 		Create Event -->
        <servlet>
			<servlet-name>createEvent</servlet-name>
			<servlet-class>com.PlanEEZy.servlet.EventCreateServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>createEvent</servlet-name>
			<url-pattern>/createEvent</url-pattern>
		</servlet-mapping>
<!-- 				Add package --> 
		<servlet>
		<servlet-name>createPackage</servlet-name>
			<servlet-class>com.PlanEEZy.servlet.PackageCreateServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>createPackage</servlet-name>
			<url-pattern>/createPackage</url-pattern>
		</servlet-mapping>

		<!-- update Event -->
		<servlet>
		<servlet-name>updateEvent</servlet-name>
			<servlet-class>com.PlanEEZy.servlet.EventUpdateServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>updateEvent</servlet-name>
			<url-pattern>/updateEvent</url-pattern>
		</servlet-mapping>
		
		 <!-- delete Event -->
		<servlet>
		<servlet-name>deleteEvent</servlet-name>
			<servlet-class>com.PlanEEZy.servlet.EventDeleteServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>deleteEvent</servlet-name>
			<url-pattern>/deleteEvent</url-pattern>
		</servlet-mapping>
		
		<!-- update Package -->
		<servlet>
		<servlet-name>updatePackage</servlet-name>
			<servlet-class>com.PlanEEZy.servlet.PackageUpdateServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>updatePackage</servlet-name>
			<url-pattern>/updatePackage</url-pattern>
		</servlet-mapping>
		
		<!-- delete Package -->
		<servlet>
		<servlet-name>deletePackage</servlet-name>
			<servlet-class>com.PlanEEZy.servlet.PackageDeleteServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>deletePackage</servlet-name>
			<url-pattern>/deletePackage</url-pattern>
		</servlet-mapping>
		
		<!-- Login -->
		<servlet>
		<servlet-name>Login</servlet-name>
			<servlet-class>com.PlanEEZy.servlet.loginServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>Login</servlet-name>
			<url-pattern>/Login</url-pattern>
		</servlet-mapping>
	
     </web-app> 
      
     